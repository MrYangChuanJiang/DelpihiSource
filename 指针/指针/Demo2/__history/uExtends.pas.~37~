unit uExtends;

interface
{定义一个动物基类}

type
    TAnimal = class
    private
        FWeight: Double;
        FSex: Integer;
    public    {定义一个方法}
        constructor Create(FWeight: Double);

    {定义属性}
        property Weight: Double read FWeight write FWeight;
        // FSex: read FSex write FSex;
    end;
{定义一个派生类 狗类=>继承动物基类}
type
    TDog = class(TAnimal)
        {定义方法}
        constructor Create();
    end;

implementation

{ TAnimal }
constructor TAnimal.Create(FWeight: Double);
begin
    Self.FWeight := FWeight;
end;
initialization

finalization

end.

